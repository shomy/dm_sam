    <h2 style ="border-bottom: 1px solid white;">message:</h2>
    <br><br>
    <% if @user.id == current_user.id %>

    <% else %>

      <% if @isRoom == true %>
        <div class ="chat-btn"><a href="/rooms/<%= @roomId %>">CHAT</a></div>
      <% else %>
        <%= form_for @room do |f| %>
          <%= fields_for @entry do |e| %>
            <%= e.hidden_field :user_id, :value => @user.id %>
          <% end %>
                <%= f.submit "CHAT", :class=> "chat-btn" %>
        <% end %>
      <% end %>
    <% end %>


