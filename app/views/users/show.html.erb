      <div id ="face_img_field">
        <i class ="fas fa-smile"></i>
      </div>
    </div>
    <h2><%= @user.email %></h2>
  </div>
  <div class ="chat_info">
    <h2 style ="border-bottom: 1px solid white;">age:</h2>
