

<% if user_signed_in? %>
<div class ="content">
  <div class ="mypage-head">
    <div class ="myface-wrapper_chat">
      <div id ="face_img_field">
        <i class ="fas fa-smile"></i>
      </div>
    </div>
  </div>

  <h2>Hello <%= current_user.email %></h2>
  <h3><span><i class="fas fa-comment-dots fa-fw"></i> LET'S CHAT WITH</span></h3>


  <% @users.each do |u| %>
  <div class ="chat-index">

      <div class ="face_img_chat"></div>
      <div class ="chat_name"><a href="/users/<%= u.id %>"><%= u.email %>さん</a></div>
      <div class ="chat-btn"><a href="/rooms/<%= @roomId %>">CHAT</a></div>
      <div class ="delete-chat"><h4><i class="fas fa-times-circle fa-fw"></i>Delete</h4></div>

  </div>

<% end %>
  <%= link_to "ログアウト", destroy_user_session_path, :method => :delete %>
</div>

<% else %>
<div class ="content">
    <br><br><br><br><br><br>
    <%= link_to "ユーザーを登録する", new_user_registration_path %>
    <br>
    <%= link_to "ログインする", new_user_session_path %>
    <br><br><br><br><br><br>

</div>
<% end %>
